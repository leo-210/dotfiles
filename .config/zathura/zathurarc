map r reload
map R rotate
map i recolor

set guioptions ""

set zoom-center true

set font "JetBrains Mono Nerd Font regular 9"

# Colors (Dracula)

set recolor-keephue
set recolor

set default-fg "#f8f8f2"
set default-bg "#44475a"

set highlight-color "#44475a"
