### COLOR THEME ###
###################

set $bg #282a36
set $selection #44475a
set $fg #f8f8f2
set $comment #6272a4
set $cyan #8be9fd
set $green #50fa7b
set $orange #ffb86c
set $pink #ff79c6
set $purple #bd93f9
set $red #ff5555
set $yellow #f1fa8c

# class                 border  bg      fg  indicator  child border
client.focused          $purple $purple $fg $purple    $purple
client.focused_inactive $bg     $bg     $fg $bg        $bg
client.unfocused        $bg     $bg     $fg $bg        $bg
client.urgent           $orange $bg     $fg $orange    $orange

client.background       #00000000


